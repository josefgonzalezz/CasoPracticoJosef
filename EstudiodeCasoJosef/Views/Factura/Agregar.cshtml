@model EstudiodeCasoJosef.Data.Factura
@{
    ViewData["Title"] = "Nueva Factura";
}

<h2>Nueva Factura</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Agregar" method="post">

    <div class="mb-3">
        <label asp-for="NombreCliente" class="form-label">Nombre del Cliente</label>
        <input asp-for="NombreCliente" class="form-control" />
        <span asp-validation-for="NombreCliente" class="text-danger"></span>
    </div>

    <hr />
    <h5>Seleccione los Productos</h5>
    <p class="text-muted">Deje en 0 la cantidad de los productos que no desea agregar.</p>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Precio Unitario</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
            }
            @foreach (var producto in ViewBag.Productos)
            {
                <tr>
                    <td>
                        <input type="hidden" name="productosIds[@i]" value="@producto.Id" />
                        @producto.Nombre
                    </td>
                    <td>₡ @producto.Precio</td>
                    <td>
                        <input type="number"
                               name="cantidades[@i]"
                               min="0"
                               value="0"
                               class="form-control" />
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Guardar Factura</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}